<?xml version='1.0'?>
<robot name="Edymobile" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:include filename="$(find edymobile)/urdf/utils/inertia.xacro" />
    <xacro:include filename="$(find edymobile)/urdf/utils/materials.xacro" />

	
    <xacro:property name="wheel_radius" value="0.0225"/>
    <xacro:property name="wheel_len" value="0.02"/>
    <xacro:arg name="mass" default="0.270"/>
    <xacro:property name="mass_p" value="$(arg mass)"/>
    <xacro:property name="body_mass" value="${mass_p * 0.80}"/>
    <xacro:property name="wheel_mass" value="${mass_p * 0.10}"/>


   <link name="base_link" />
   <!-- ********************** ROBOT BASE *********************************  -->
   <link name="base_center" >
	<visual>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<geometry>
			<cylinder radius="0.125" length="0.11"/>
		</geometry>
		<material name="white"/>
	</visual>
	<collision>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<geometry>
			<cylinder radius="0.125" length="0.11"/>
		</geometry>
	</collision>
	<inertial>
		<mass value="${body_mass}"/>
		<xacro:cylinder_inertia mass="${body_mass}" h="0.11" r="0.125"/>
	</inertial>
   </link>
   <!-- ********************** LEFT WHEEL *********************************  -->
   <link name="left_wheel" >
	<visual>
		<origin xyz="0 0 0" rpy="1.5707 -0 0"/>
		<geometry>
			<cylinder length="${wheel_len}" radius="${wheel_radius}"/>
		</geometry>
		<material name="black"/>
	</visual>
	<collision>
		<origin xyz="0 0 0" rpy="1.5707 -0 0"/>
		<geometry>
			<cylinder length="${wheel_len}" radius="${wheel_radius}"/>
		</geometry>
	</collision>
	<inertial>
		<mass value="${wheel_mass}"/>
		<xacro:cylinder_inertia mass="${wheel_mass}" h="${wheel_len}" r="${wheel_radius}"/>
	</inertial>
   </link>
   <!-- ********************** RIGHT WHEEL *********************************  -->
   <link name="right_wheel" >
	<visual>
		<origin xyz="0 0 0" rpy="1.5707 -0 0"/>
		<geometry>
			<cylinder length="${wheel_len}" radius="${wheel_radius}"/>
		</geometry>
		<material name="black"/>
	</visual>
	<collision>
		<origin xyz="0 0 0" rpy="1.5707 -0 0"/>
		<geometry>
			<cylinder length="${wheel_len}" radius="${wheel_radius}"/>
		</geometry>
	</collision>
	<inertial>
		<mass value="${wheel_mass}"/>
		<xacro:cylinder_inertia mass="${wheel_mass}" h="${wheel_len}" r="${wheel_radius}"/>
	</inertial>
   </link>
   <!-- ********************** BALL 1 *********************************  -->
   <link name="ball_1" >
	<visual>
	<origin xyz="0 0 0" rpy="1.5707 -0 0"/>
	<geometry>
		<sphere radius="0.0225"/>
	</geometry>
	</visual>
	<collision>
	<origin xyz="0 0 0" rpy="0 0 0"/>
	<geometry>
		<sphere radius="0.0225"/>
	</geometry>
	</collision>
   </link>
   <!-- ********************** BALL 2 *********************************  -->
   <link name="ball_2" >
	<visual>
	<origin xyz="0 0 0" rpy="1.5707 -0 0"/>
	<geometry>
		<sphere radius="0.0225"/>
	</geometry>
	</visual>
	<collision>
	<origin xyz="0 0 0" rpy="0 0 0"/>
	<geometry>
		<sphere radius="0.0225"/>
	</geometry>
	</collision>
  </link>
  
   <!-- ********************** JOINTS *********************************  -->
  <joint name="joint0" type="fixed">
   	<parent link="base_link"/>
   	<child link="base_center"/>
   	<origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>
   
  <joint name="left_wheel_joint" type="continuous">
   	<parent link="base_center"/>
   	<child link="left_wheel"/>
   	<origin xyz="0 -0.126 -0.0427"/>
      	<axis xyz="0 1 0"/>
      	<limit  effort="-1" velocity ="-1"/>
	<dynamics spring_reference="0" spring_stiffness="0" damping ="0"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
  	<parent link="base_center"/>
  	<child link="right_wheel"/>
  	<origin xyz="0 0.126 -0.0427"/>
      	<axis xyz="0 1 0"/>
      	<limit  effort="-1" velocity ="-1"/>
	<dynamics spring_reference="0" spring_stiffness="0" damping ="0"/>
  </joint>
  
  <joint name="joint3" type="fixed">
  	<parent link="base_center"/>
  	<child link="ball_1"/>
  	<origin xyz="-0.08 0 -0.0425" rpy="0 0 0"/>
  </joint>
  
  <joint name="joint4" type="fixed">
  	<parent link="base_center"/>
  	<child link="ball_2"/>
  	<origin xyz="0.08 0 -0.0425" rpy="0 0 0"/>
  </joint>
  
  <!-- ********************** TRANSMISSION *********************************  -->
  
    <transmission name="left_wheel_trans">
	<type>transmission_interface/SimpleTransmission</type>
	<actuator name="$left_wheel_motor">
	<mechanicalReduction>1</mechanicalReduction>
	</actuator>
	<joint name="left_wheel_joint">
	<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
	</joint>
  </transmission>
  

  <transmission name="right_wheel_trans">
	<type>transmission_interface/SimpleTransmission</type>
	<actuator name="$right_wheel_motor">
	<mechanicalReduction>1</mechanicalReduction>
	</actuator>
	<joint name="right_wheel_joint">
	<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
	</joint>
  </transmission>

  <!-- ********************** GAZEBO *********************************  -->
	<gazebo reference="right_wheel">
		<material>Gazebo/Black</material>
		<mu1 value="200.0"/>
		<mu2 value="100.0"/>
		<kp value="10000000.0" />
		<kd value="1.0" />
		<fdir1 value="1 0 0"/>
	</gazebo>
	<gazebo reference="left_wheel">
		<material>Gazebo/Black</material>
		<mu1 value="200.0"/>
	  	<mu2 value="100.0"/>
	  	<kp value="10000000.0" />
	  	<kd value="1.0" />
	  	<fdir1 value="1 0 0"/>
	</gazebo>
	<gazebo reference="base_link">
		<material>Gazebo/White</material>
	</gazebo>
	
  	 

	<!-- Diff drive -->
	<gazebo>
		<plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
			<alwaysOn>true</alwaysOn>
			<updateRate>10</updateRate>
			<torque>100</torque>
			<leftJoint>left_wheel_joint</leftJoint>
			<rightJoint>right_wheel_joint</rightJoint>
			<wheelSeparation>0.0955</wheelSeparation>
			<wheelDiameter>0.044</wheelDiameter>
			<commandTopic>cmd_vel</commandTopic>
			<odometryTopic>odom</odometryTopic>
			<odometryFrame>odom</odometryFrame>
			<robotBaseFrame>base_link</robotBaseFrame>
			<robotNamespace>/edymobile</robotNamespace>
		</plugin>
	</gazebo>
   
</robot>
